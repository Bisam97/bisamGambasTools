Public Sub Form_Open()

  'txtCommand.SetFocus
  Timer1.Stop
  Timer2.Stop

End

Public Sub btnCtrlC_Click()

  Print #$hProcess, Chr$(3);

End



Public Sub Timer1_Timer()
  
  olong = nlong
  
  nlong = FMain.Filesize() + CLong(CFloat(nlong / orgiglong) * CFloat(01071672))
  
  FMain.ProgressBar1.Value = CFloat(nlong / orgiglong)
  
  If olong == nlong Then
    If olong > 0 Then
      Timer1.Stop
      FMain.FileIN.Enabled = True
      FMain.DirOUT.Enabled = True
      FMain.ProgressBar1.Value = 0.0
      FConsole.Close
    Endif
  Endif
  Catch
    Message.Error(Error.Text, "OK")

End

Public Sub Timer2_Timer()

  olong = nlong
  
  nlong = FMain.Filesize() + CLong(CFloat(nlong / orgiglong) * CFloat(01071672))
  
  FMain.ProgressBar1.Value = CFloat(nlong / orgiglong)
  
  If olong == nlong Then
    If olong > 0 Then
      Timer2.Stop
      FMain.ProgressBar1.Value = 0.0
      FConsole.Fertig = True
    Endif
  Endif
  Catch
    Message.Error(Error.Text, "OK")

End
